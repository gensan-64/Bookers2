<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>

  		<h1>Editing Book</h1>
  		<%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
         <%=f.label:title %>
         <%= f.text_field :title, autofocus: true, id:"inputName", class:"form-control" %>
        </div>

　       <div class="form-group">
        　   <label for="inputName">Opinion</label>
              <%= f.text_field :body, autofocus: true, id:"inputName", class:"form-control" %>
　       </div>
　       <%= f.submit "Update Book", class:"btn btn-success" %>
      　　<% end %>
            <%= link_to "Show", book_path(@book)%>
            <%= link_to "Back", books_path%>
    </div>
  </div>
</div>

