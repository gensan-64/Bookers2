<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <% if @user.errors.any? %>
            <%= @user.errors.count %>errors
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>

  		<h1>User info</h1>
  		<%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
         <%=f.label:inputName, "Name"%>
         <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

　       <div class="form-group">
        　   <label for="inputName">Introduction</label>
              <%= f.text_field :introduction, autofocus: true, id:"inputName", class:"form-control" %>
　       </div>
　       <%= f.submit "Update User", class:"btn btn-success" %>
      <% end %>
    </div>
 </div>
</div>

